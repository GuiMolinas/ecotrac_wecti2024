<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Historico"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <!-- Botão para voltar -->
        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/home"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/txtHistorico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtHistorico"
            android:textColor="#006400"
            android:textSize="44sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center" />

        <!-- Container de Histórico - Repetir conforme necessário -->
        <LinearLayout
            android:id="@+id/containerHistorico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:background="#006400"
            android:elevation="4dp">

            <!-- Data do histórico -->
            <TextView
                android:id="@+id/txtDataHistorico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data: 01/01/2024"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Consumo de Água -->
            <TextView
                android:id="@+id/txtConsumoAgua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumo de Água: 150L"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Consumo de Eletricidade -->
            <TextView
                android:id="@+id/txtConsumoEletricidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumo de Eletricidade: 5.4 kWh"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Pegada de Carbono -->
            <TextView
                android:id="@+id/txtPegadaCarbono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pegada de Carbono: 2.3 kgCO₂"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
